package Inheritance_week7;

public class TimeLimitedProduct extends Product {
    private int timesStart ;
    private int timesEnd;

    public TimeLimitedProduct(String name , double price , int timesStart , int timesEnd){
        super(name , price);
        this.timesStart = timesStart;
        this.timesEnd = timesEnd;
        System.out.println("Time limited product is created ...");
    }

    public void setTimes(int timesStart , int timesEnd){
        this.timesStart = timesStart;
        this.timesEnd = timesEnd;
    }

	public void setStartTimes(int timesStart){
		this.timesStart = timesStart;
	}
	
	public void setEndTimes(int timesEnd){
		this.timesEnd = timesEnd;
	}

    public int getStartTimes(){
		return timesStart;
	}
    
    public int getEndTimes(){
		return timesEnd;
	}
    
    public void checkTime(int times){
        if(timesStart <= times &&  times <= timesEnd){
            System.out.println("You can buy it.");
            System.out.println("Available from " + getStartTimes() + ":00 to " + getEndTimes() + ":00");
        }else{
            System.out.println("The time to buy is over.");
            System.out.println("Available from " + getStartTimes() + ":00 to " + getEndTimes() + ":00");
            
        }
    }


}
